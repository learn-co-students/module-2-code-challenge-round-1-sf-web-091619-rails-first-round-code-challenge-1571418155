<h1>Create a New Heroine!</h1>


<% if flash[:errors] %>
  <%= "Please Fix Errors and Try Again" %>
  <% flash[:errors].each do |error| %>
    <%= error %>
  <% end %>
<% end %>


<%= form_for @heroine do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
    <div>
    <%= f.label :super_name %>
    <%= f.text_field :super_name %>
  </div>
    <div>
    <%= f.label :power_id %>
    <%= f.collection_select :power_id, @powers, :id, :name %>
  </div>
  <%= f.submit %>
<% end %>